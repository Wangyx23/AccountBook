<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D8ECF3"><!--  淡蓝色背景  -->



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center">
        <TextView
            android:gravity="bottom|right"
            android:textSize="70dp"
            android:singleLine="true"
            android:layout_span="3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/widget_keypad_display"
            android:id="@+id/display"
            />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/one"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/two"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/three"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="3"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/four"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:id="@+id/five"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:id="@+id/six"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="6"
            android:textSize="25sp" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/seven"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="9"
            android:textSize="25sp" />


    </TableRow>



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/dot"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:layout_span="1"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="."
            android:textSize="25sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:layout_span="1"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="0"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/zero"
            android:layout_marginLeft="10dp"
            android:layout_span="1"
            android:src="@mipmap/ic_tb_calc_del"
            android:background="@drawable/widget_keypad_display"

            android:gravity="center"
            />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:layout_span="1"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="23sp" />

        <Button
            android:id="@+id/clean"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:layout_span="1"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="Clean"
            android:textSize="23sp" />

        <Button
            android:id="@+id/done"
            android:layout_width="98dp"
            android:layout_marginLeft="10dp"
            android:layout_span="1"
            android:background="@drawable/widget_keypad_display"
            android:gravity="center"
            android:text="Done"
            android:textSize="23sp" />


    </TableRow>

</TableLayout>

